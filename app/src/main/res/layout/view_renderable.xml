<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="@dimen/_150sdp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/arView"
    android:padding="@dimen/_10sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/rounded_bg"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:layout_weight="3"
            android:text="Selected Model"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp">
        </TextView>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cancelButton"
            android:src="@drawable/outline_clear_24"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            >
        </ImageButton>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp">

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_weight="3"
            android:text="20$"
            android:textSize="@dimen/_14sdp">

        </TextView>

        <ImageButton
            android:id="@+id/deleteModelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/outline_delete_outline_24"
            android:layout_weight="1"
            android:layout_gravity="center"
            />
    </LinearLayout>

  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="4">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/materialListRecyclerView"
            android:scrollbars="horizontal"
            android:layout_weight="3"
            />
        <TextView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="wrap_content"
            android:id="@+id/materialText"
            android:text="1"
            android:textStyle="bold"
            android:textSize="@dimen/_14sdp"
            android:gravity="center"
            android:layout_weight="1"
            />
    </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/defaultTexture"
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:onClick="changeTexture"
                    android:padding="0dp"
                    android:tag="default_texture"
                    android:text="Default" />


                <ImageButton
                    android:id="@+id/texture1"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:tag="texture1"
                    android:onClick="changeTexture"
                    android:background="@drawable/texture1" />

                <ImageButton
                    android:id="@+id/texture2"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:tag="texture2"
                    android:onClick="changeTexture"
                    android:background="@drawable/texture2" />


                <ImageButton
                    android:id="@+id/texture3"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:tag="texture3"
                    android:onClick="changeTexture"
                    android:background="@drawable/texture3" />

                <ImageButton
                    android:id="@+id/texture4"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:tag="texture4"
                    android:onClick="changeTexture"
                    android:background="@drawable/texture4" />
                <ImageButton
                    android:id="@+id/texture5"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:tag="texture5"
                    android:onClick="changeTexture"
                    android:background="@drawable/texture5" />
                <ImageButton
                    android:id="@+id/texture6"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:tag="texture6"
                    android:onClick="changeTexture"
                    android:background="@drawable/texture6" />
                <ImageButton
                    android:id="@+id/texture7"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:tag="texture7"
                    android:onClick="changeTexture"
                    android:background="@drawable/texture7" />

            </LinearLayout>

        </HorizontalScrollView>
<!--        <ImageView-->
<!--            android:layout_width="@dimen/_20sdp"-->
<!--            android:layout_height="@dimen/_30sdp"-->
<!--            android:id="@+id/textureImageView"-->
<!--            android:background=""-->
<!--            android:layout_gravity="center"-->
<!--            />-->
<!--    </LinearLayout>-->



</LinearLayout>




